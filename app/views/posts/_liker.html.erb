<div class="d-flex justify-content-between my-2">
  <div class="d-flex">
    <%if liker.profile_picture.attached? %>
      <%=image_tag liker.profile_picture, class: 'img-thumbnail rounded-circle', style: 'width: 10%' %>
    <%else%>
      <%=image_tag 'user_picture.png' , class: 'img-thumbnail rounded-circle', style: 'width: 10%' %>
    <%end %>    <div class="d-flex flex-column mx-3">
      <small class=" text-dark fw-bold mt-2" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width:10rem;">
        <%= link_to liker, class:'a-decoration-none', data: {turbo_frame: "_top"} do %>
          <%=liker.username %>
          <%end %>
          </small>
    </div>

  </div>
  <%= link_to root_path, class: "btn btn-primary ", style: "text-decoration:none;" do %>
    <small class="fw-bold text-white">Follow</small>
  <% end %>
</div>