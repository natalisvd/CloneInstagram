<div id="<%= dom_id post %>">

  <div class="card" style="width: 25rem;">
    <div class="card-header bg-white">
      <div class=" d-flex justify-content-between">
        <div>
          <%if post.user.profile_picture.attached? %>
            <%=image_tag post.user.profile_picture, class: 'img-thumbnail rounded-circle', style: 'width: 10%' %>
          <%else%>
            <%=image_tag 'user_picture.png' , class: 'img-thumbnail rounded-circle', style: 'width: 10%' %>
          <%end %>
          <span class="fw-bold mx-2 "><%=post.user.username %></span>
      </div>
        <div>
          <div class="dropdown">
            <a class="text-dark fs-4" style="text-decoration: none;" href="#" role='button' data-bs-toggle="dropdown" aria-expanded="false">
              ...
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#"></a>Edit post</li>
              <li><a class="dropdown-item" href="#"></a>Delete post</li>
            </ul>
          </div>
        </div>
      </div>
    </div>


    <div class="card-body">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
          <% post.images.each_with_index do |image, i| %>
            <div class="carousel-item  <%= i==0 ? "active": ''%>" style="height: 25rem;">
              <%= image_tag image, class: "d-block w-100", style: "max-height: 100%; object-fit:cover;" %>
            </div>
          <% end %>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>


      <p class="card-text"><span class="fw-bold"><%=post.user.username %></span> <%=post.caption %> </p>
      <small class="text-muted"><%= time_ago_in_words(post.created_at) %></small>
    </div>
    <div class="card-footer d-flex justify-content-between bg-white ">
      <input type="text" class="w-75" style="border:none;" placeholder="Add a comment ...">
      <a class="text-primary">Post</a>
      <i class="bi bi-bookmark" style="font-size: 1.5rem;"></i>


    </div>
  </div>

</div>
