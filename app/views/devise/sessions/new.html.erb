
<div class="conteiner home-section d-flex flex-row justify-content-center align-items-center">
  <div class="images-section pt-3 d-none d-lg-block"></div>

  <div class="login-section pt-3">
    <div class="card text-center pt-5" style="width: 23rem;">
      <%= image_tag 'logo.png', class: 'card-img-top' %>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="mb-3 mt-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",  id:"email", placeholder:"Phone number, username, or email" %>
              </div>
              <div class="mb-3">
                <%= f.password_field :password, class:"form-control", id: "password", placeholder: "Password" %>
              </div>
          <%= f.submit  "Log in", class:"btn btn-primary w-100" %>

          <% end %>
        <div class="d-flex align-items-center mt-4">
          <hr class="line"/>
          <h2 class="line-text">OR</h2>
          <hr class="line"/>
        </div>
        <a href="#" class="d-block mt-4 text-decoration-none fw-bold">
          <%= image_tag("facebook.png", class: "facebook") %>
          Log in with Facebook
        </a>

        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% elsif alert %>
          <p class="alert"><%= alert %></p>
        <%end %>

        <a href="#" class="fs-6 d-block my-4 text-decoration-none">Forgot password?</a>
      </div>
    </div>
    <div class="card text-center py-2 mt-3" style="width: 23rem;">
      <div class="card-text">
        Don't have an account?
        <%= link_to "Sign up", new_user_registration_path, class: 'fs-6 my-4 text-decoration-none text-info' %>
      </div>
    </div>

  </div>

</div>