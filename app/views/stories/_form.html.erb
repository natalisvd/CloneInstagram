<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade " id="newStory" tabindex="-1" aria-labelledby="newStoryLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered ">
    <%= form_with(model: story) do |form| %>

      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newStoryLabel">Create new Story</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body d-flex">
          <div class="border-end border-secondary mx-2 " style="width:60%">
            <%= form.file_field :image, id: 'story-images', required: true %>
          </div>

          <div style="width:40%">
            <div class="my-2 mx-2">
              <%if current_user.profile_picture.attached? %>
                <%=image_tag current_user.profile_picture, class: 'img-thumbnail rounded-circle', style: 'width: 10%' %>
              <%else%>
                <%=image_tag 'user_picture.png' , class: 'img-thumbnail rounded-circle', style: 'width: 10%' %>
              <%end %>
              <span class="fw-bold mx-2 "><%=current_user.username %></span>
            </div>

            <div>
              <%= form.text_area :text , rows: 8, placeholder: "Write the caption...", class:'form-control border-0', style:'resize:none'%>
            </div>




          </div>

        </div>
        <div class="modal-footer">
          <%= form.submit "Post", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>



